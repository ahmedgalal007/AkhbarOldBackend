@model CMS.Areas.CoreHandler.Models.NewsVM
@{
    ViewBag.Title = "حذف الخبر";
}


<div class="panel panel-default" id="@Model.RelatedTarget">
    <div class="panel-heading">
        <i class="fa fa-external-link-square"></i>
        حذف الخبر
        <div class="panel-tools">
            <a class="btn btn-xs btn-link panel-collapse collapses " href="#">
            </a>
            @*<a class="btn btn-xs btn-link panel-refresh" href="#">
                    <i class="fa fa-refresh"></i>
                </a>*@
            @*<a class="btn btn-xs btn-link panel-expand" href="#">
                    <i class="fa fa-resize-full"></i>
                </a>*@

        </div>
    </div>
    <div class="panel-body">
        <div class="form-horizontal">

            @using (Html.BeginForm("Delete", "News", new { area = "CoreHandler", MNewsID = Model.News.NewID }, FormMethod.Post))
            {
                @Html.AntiForgeryToken()

                <div class="form-group">
                    @Html.LabelFor(model => model.News.Title, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.DisplayFor(model => model.News.Title)
                    </div>
                </div>


                <div class="form-group">
                    @Html.LabelFor(model => model.News.ByLine, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.DisplayFor(model => model.News.ByLine)
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.News.SubTitle, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.DisplayFor(model => model.News.SubTitle)
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col-md-2">تاريخ الاضافة</label>
                    <div class="col-md-10">
                        @Html.DisplayFor(model => model.News.AddedDate)
                    </div>
                </div>

                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="حذف" class="btn btn-default" />
                        </div>
                    </div>


            }

            @*<div>

                @Html.ActionLink("العودة لصفحة الالبومات", "Index", "Editors", new { area = "CoreHandler" }, null)
            </div>*@

        </div>
    </div>

</div>
