@model CMS.Areas.CoreHandler.Models.EditorsVM


@{
    ViewBag.Title = "حذف الكاتب";
}


    <div class="panel panel-default" id="@Model.RelatedTarget" >
        <div class="panel-heading">
            <i class="fa fa-external-link-square"></i>
            حذف الكاتب
            <div class="panel-tools">
                <a class="btn btn-xs btn-link panel-collapse collapses " href="#">
                </a>
                @*<a class="btn btn-xs btn-link panel-refresh" href="#">
                        <i class="fa fa-refresh"></i>
                    </a>*@
                @*<a class="btn btn-xs btn-link panel-expand" href="#">
                        <i class="fa fa-resize-full"></i>
                    </a>*@

            </div>
        </div>
        <div class="panel-body">
            <div class="form-horizontal">
               @using (Html.BeginForm("Delete", "Editors", new { area = "CoreHandler" ,editorId=Model.editor.EditorID } ,FormMethod.Post))
               {
                    @Html.AntiForgeryToken()

                    <div class="form-group">

                        <div class="col-md-10">
                            @Html.DisplayFor(model => model.editor.EditorName)
                        </div>
                    </div>


                    <div class="form-group">

                        <div class="col-md-10">
                            <img class="img-rounded" width="150" height="150" src="@Model.editor.picture" />
                        </div>
                    </div>

                        <div class="form-group">

                            <div class="col-md-10">
                                @Html.DisplayFor(model => model.editor.Section.SecTitle)
                            </div>
                        </div>

                        <div class="form-group">

                            <div class="col-md-10">
                                @Html.DisplayFor(model => model.editor.ArticleName)
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                <input type="submit" value="حذف" class="btn btn-default" />
                            </div>
                        </div>
                        @*@Ajax.CustomRowFunctionsAjaxActionLink("<i class=\"fa fa-trash-o\"></i> Delete", "CoreHandler", "Editors", "Delete", Model.editor.EditorID, null, null, new Dictionary<string, object> { { "tabindex", "-1" }, { "role", "menuitem" } })*@

                   


                }


               

                <div>

                    @Html.ActionLink("العودة لصفحة الكتاب", "Index", "Editors", new { area = "CoreHandler" }, null)
                </div>

            </div>
        </div>

    </div>
