@model CMS.Areas.CoreHandler.Models.MainSectionVM
@using CMS.Areas.FrameWork.Controllers
@{
    ViewBag.Title = "تفاصيل الباب";
}

<div class="panel panel-default" id="@Model.RelatedTarget">
    <div class="panel-heading">
        <i class="fa fa-external-link-square"></i>
        تفاصيل الباب
        <div class="panel-tools">
            <a class="btn btn-xs btn-link panel-collapse collapses " href="#">
            </a>
            @*<a class="btn btn-xs btn-link panel-refresh" href="#">
                    <i class="fa fa-refresh"></i>
                </a>*@
            @*<a class="btn btn-xs btn-link panel-expand" href="#">
                    <i class="fa fa-resize-full"></i>
                </a>*@

        </div>
    </div>
    <div class="panel-body">
        <div class="form-horizontal">

            <div class="form-group">
                @Html.LabelFor(model => model.section.SecTitle, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.DisplayFor(model => model.section.SecTitle, new { htmlAttributes = new { @class = "form-control" } })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.section.Keywords, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.DisplayFor(model => model.section.Keywords, new { htmlAttributes = new { @class = "form-control" } })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.section.Description, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.DisplayFor(model => model.section.Description, new { htmlAttributes = new { @class = "form-control" } })
                </div>
            </div>

            <div class="form-group ">
                <label class="control-label col-md-2">قسم فرعي</label>
                <div class="col-md-10">
                    @Html.CheckBoxFor(model => model.SubSecFlag, new { @class = "iCheck-helper", @disabled = "disabled" })
                </div>
            </div>
            <div class="form-group" id="divParentSec" >
                <label class="control-label col-md-2">القسم الرئيسي</label>
                <div class="col-sm-10">
                    @Html.DropDownListFor(model => model.section.ParentSectionID, new SelectList(ViewBag.Sec_ID, "Value", "Text"), "--أختار الباب--", new { @class = "form-control", @disabled = "disabled" })
                    @Html.ValidationMessageFor(model => model.section.ParentSectionID, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group ">
                @Html.LabelFor(model => model.section.Hide, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.CheckBoxFor(model => model.SHide, new { @class = "iCheck-helper", @disabled = "disabled" })
                </div>
            </div>


            <div class="form-group ">
                @Html.LabelFor(model => model.section.WeeklySection, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.CheckBoxFor(model => model.SWeeklySection, new { @class = "iCheck-helper", @disabled = "disabled" })
                </div>
            </div>
        </div>

        <div>
            @Html.ActionLink("العودة لصفحة الابواب", "Index", "MainSection", new { area = "CoreHandler" }, null)
        </div>

    </div>


</div>



