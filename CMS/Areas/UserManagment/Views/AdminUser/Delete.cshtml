@model CMS.Areas.UserManagment.Models.AdminUserVM


@{
    ViewBag.Title = "حذف المستخدم";
}


<div class="panel panel-default" id="@Model.RelatedTarget">
    <div class="panel-heading">
        <i class="fa fa-external-link-square"></i>
        حذف المستخدم
        <div class="panel-tools">
            <a class="btn btn-xs btn-link panel-collapse collapses " href="#">
            </a>
            @*<a class="btn btn-xs btn-link panel-refresh" href="#">
                    <i class="fa fa-refresh"></i>
                </a>*@
            @*<a class="btn btn-xs btn-link panel-expand" href="#">
                    <i class="fa fa-resize-full"></i>
                </a>*@

        </div>
    </div>
    <div class="panel-body">
        <div class="form-horizontal">
            @using (Html.BeginForm("Delete", "AdminUser", new { area = "UserManagment", adminUserID = Model.adminUser.UserID }, FormMethod.Post))
            {
                @Html.AntiForgeryToken()

                <div class="form-group">

                    <div class="col-md-10">
                        @Html.DisplayFor(model => model.adminUser.FullName)
                    </div>
                </div>


                <div class="form-group">

                    <div class="col-md-10">
                        <img class="img-rounded" width="150" height="150" src="@ViewBag.UsersImgPath/@Model.adminUser.UserPhoto" />
                    </div>
                </div>

                    <div class="form-group">

                        <div class="col-md-10">
                            @Html.DisplayFor(model => model.adminUser.UserName)
                        </div>
                    </div>


                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="حذف" class="btn btn-default" />
                        </div>
                    </div>

            }

            <div>

                @Html.ActionLink("العودة لصفحة المستخدمين", "Index", "AdminUser", new { area = "UserManagment" }, null)
            </div>

        </div>
    </div>

</div>
