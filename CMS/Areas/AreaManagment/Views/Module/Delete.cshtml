@model CMS.Areas.AreaManagment.Models.ModuleVM


@{
    ViewBag.Title = "حذف قطاع";
}


<div class="panel panel-default" id="@Model.RelatedTarget">
    <div class="panel-heading">
        <i class="fa fa-external-link-square"></i>
        حذف قطاع
        <div class="panel-tools">
            <a class="btn btn-xs btn-link panel-collapse collapses " href="#">
            </a>
            @*<a class="btn btn-xs btn-link panel-refresh" href="#">
                    <i class="fa fa-refresh"></i>
                </a>*@
            @*<a class="btn btn-xs btn-link panel-expand" href="#">
                    <i class="fa fa-resize-full"></i>
                </a>*@

        </div>
    </div>
    <div class="panel-body">
        <div class="form-horizontal">
            @using (Html.BeginForm("Delete", "Module", new { area = "AreaManagment", ModuleID = Model.Module.ModuleId }, FormMethod.Post))
            {
                @Html.AntiForgeryToken()

                <div class="form-group">

                    <div class="col-md-10">
                        @Html.DisplayFor(model => model.Module.ModuleName)
                    </div>
                </div>

                <div class="form-group">

                    <div class="col-md-10">
                        @Html.DisplayFor(model => model.Module.AreaName)
                    </div>
                </div>
                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="حذف" class="btn btn-default" />
                        </div>
                    </div>

            }

            <div>

                @Html.ActionLink("العودة لصفحة القطاعات", "Index", "Module", new { area = "AreaManagment" }, null)
            </div>

        </div>
    </div>

</div>
