@model Domain.Akhbar.DBEntities.AdminUser

@{
    ViewBag.Title = "Login";
    Layout = "~/Areas/Home/Views/Shared/_PublicLayout.cshtml";
}
<body class="login example2">
    <div class="main-login col-sm-4 col-sm-offset-4">
        <div class="logo">
            <img src="/assets/images/logo.png" width=100 height=50>
        </div>
        @using (Html.BeginForm("Login", "Home", FormMethod.Post, new { @class = "form-login" }))
        {
            @Html.AntiForgeryToken()


        <!-- start: LOGIN BOX -->
            <div class="box-login">
                <h3>تسجيل الدخول</h3>
                <p>
                    للدخول. ادخل كلمة المرور والباسوورد
                </p>

                @Html.ValidationSummary(true, "خطأ فى تسجيل الدخول", new { @class = "text-danger alert alert-danger" })


                <fieldset>
                    <div class="form-group">
                        <span class="input-icon">
                            @Html.TextBoxFor(model => model.UserName, new { @class = "form-control", placeholder = "UserName" })
                            @*<input type="text"  name="username" placeholder="Username">*@
                            <i class="fa fa-user"></i>
                        </span>
                    </div>
                    <div class="form-group form-actions">
                        <span class="input-icon">
                            @Html.TextBoxFor(model => model.Password, new { @class = "form-control password", type = "Password", placeholder = "Password" })
                            @*<input type="password" class="form-control password" name="password" placeholder="Password">*@
                            <i class="fa fa-lock"></i>
                            @*<a class="forgot" href="#">
            I forgot my password
        </a>*@
                        </span>
                    </div>
                    <div class="form-actions">
                        @*<label for="remember" class="checkbox-inline">
                                <input type="checkbox" class="grey remember" id="remember" name="remember">
                                Keep me signed in
                            </label>*@
                        <button type="submit" class="btn btn-bricky pull-right">
                            دخول <i class="fa fa-arrow-circle-right"></i>
                        </button>
                    </div>
                </fieldset>

            </div>
        <!-- end: LOGIN BOX -->
        }
    </div>

    @section scripts {

        <script src="~/assets/js/login.js"></script>

        <script>
            jQuery(document).ready(function () {
                Main.init();
                Login.init();
            });
        </script>
    }
</body>

