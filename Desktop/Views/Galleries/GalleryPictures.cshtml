@model IEnumerable<AkhbarElyoum.Models.Pictures>
@{
    string JID = AkhbarElyoum.Controllers.HomeController.GetJournalID(HttpContext.Current.Request.Url.Host, int.Parse((HttpContext.Current.Request.QueryString["JournalID"] != null) ? HttpContext.Current.Request.QueryString["JournalID"].ToString() : "0"));
}

@if (Model.Count() > 0)
{
<div class="news news-gallery news-post-gallery">
    <ul>
        @foreach (var item in Model)
        {
            <li>
                <div class="rollover-thumbnail">
                    <a href="@ViewBag.RGalleryImgPath/@Convert.ToDateTime(@item.GDate).ToString("yyyyMMdd")/@item.PictureName" rel="lightbox" data-lightbox="rollover" title="@item.PictureCaption">
                        <span class="rollover"></span>
                        <img src="@ViewBag.RGalleryImgPath/@Convert.ToDateTime(@item.GDate).ToString("yyyyMMdd")/@item.PictureName" alt="@item.PictureCaption" />
                    </a>
                </div>
            </li>
        }
    </ul>
</div>
}








