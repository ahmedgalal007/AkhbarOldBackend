<!-- start Block1 With 5 News -->
<section class="module" id="news">
    <div class="container bord-tb">
        <div class="nohighlight p-t-0">

            <div class="col-md-8">
                <div class="news">

                    @foreach (var item in Model.News.Where(a => a.SectionID == 203))
                    {

                        if (flg)
                        {

                            <h2>
                                <a href="/news/newssection/1/1/أخبار-مصر" title="أخبار مصر" class="HomeSecTitle">أخبار مصر</a>
                            </h2>


                            flg = false;
                        }
                        if (count == 0)
                        {
                            ViewContext.Writer.Write("<div class=\"row no-gutter\">");
                            ViewContext.Writer.Write("<div class=\"col-md-8 p-0\">");


                            <div class="last-news container-full bottom-text full-photo">
                                <div class="entry-media">
                                    <a href="/news/newdetails/@item.NewsID/@JID/@(AkhbarElyoum.Controllers.HomeController.GetPureURL(item.Title))" title="@item.Title">
                                        <img class="image" src="https://Images.akhbarelyom.com/images/images/large/@item.PictureName1" alt="@item.Title" />
                                    </a>
                                </div>
                                <div class="content">
                                    <h2 class="custom-content-inline">
                                        <a href="/news/newdetails/@item.NewsID/@JID/@(AkhbarElyoum.Controllers.HomeController.GetPureURL(item.Title))" title="@item.Title"> @item.Title </a>
                                    </h2>
                                </div>
                            </div>
                        }
                        if (count == 1)
                        {
                            ViewContext.Writer.Write("<div class=\"row\">");
                        }
                        if (count > 0 && count < 3)
                        {
                            <div class="col-md-6 col-sm-6 col-xs-6 p-05">
                                <!-- Begin .container-half -->
                                <div class="last-news container-half">
                                    <div class="entry-media">
                                        <a href="/news/newdetails/@item.NewsID/@JID/@(AkhbarElyoum.Controllers.HomeController.GetPureURL(item.Title))" title="@item.Title">
                                            <img class="image" src="https://Images.akhbarelyom.com/images/images/Medium/@item.PictureName1" alt="@item.Title" />
                                        </a>
                                    </div>
                                    <div class="content">
                                        <h4><a href="/news/newdetails/@item.NewsID/@JID/@(AkhbarElyoum.Controllers.HomeController.GetPureURL(item.Title))" title="@item.Title">@item.Title</a></h4>
                                    </div>
                                </div>
                                <!-- End .container- entry- -->
                            </div>
                        }

                        if (count == 2)
                        {
                            ViewContext.Writer.Write("</div></div>");
                            ViewContext.Writer.Write("<div class=\"col-md-4 p-0\">");
                            ViewContext.Writer.Write("<div class=\"row\">");
                        }

                        if (count > 2 && count < 5)
                        {
                            <div class="col-md-12 col-sm-6 col-xs-6">
                                <!-- Begin .container-half -->
                                <div class="last-news container-half">
                                    <div class="entry-media">
                                        <a href="/news/newdetails/@item.NewsID/@JID/@(AkhbarElyoum.Controllers.HomeController.GetPureURL(item.Title))" title="@item.Title">
                                            <img class="image" src="https://Images.akhbarelyom.com/images/images/Small/@item.PictureName1" alt="@item.Title" />
                                        </a>
                                    </div>
                                    <div class="content">
                                        <h4><a href="/news/newdetails/@item.NewsID/@JID/@(AkhbarElyoum.Controllers.HomeController.GetPureURL(item.Title))" title="@item.Title">@item.Title</a></h4>
                                    </div>
                                </div>
                                <!-- End .container- entry- -->
                            </div>
                        }

                        count++;

                        if (Model.News.Where(a => a.SectionID == 1).ToList().Count > 0 && item == Model.News.Where(a => a.SectionID == 1).ToList().Last())
                        {
                            ViewContext.Writer.Write("</div></div> </div>");
                        }

                    }

                </div>
            </div>

            <div class="col-md-4">

                <div class="row">
                    <div class="col-md-12 col-sm-6 col-xs-12">
                        @Html.Action("GetBlockTextList", "Blocks", new { BlockID = 25, JournalID = 1 })

                    </div>
                </div>

            </div>
        </div>

    </div>
    </div>
</section>
<!-- End Block1 -->









