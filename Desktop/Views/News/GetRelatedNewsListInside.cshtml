@model IEnumerable<AkhbarElyoum.Models.NewsDetails>
@{int count = 0; string JID = AkhbarElyoum.Controllers.HomeController.GetJournalID(HttpContext.Current.Request.Url.Host, int.Parse((HttpContext.Current.Request.QueryString["JournalID"] != null) ? HttpContext.Current.Request.QueryString["JournalID"].ToString() : "0"));}
@if(JID == "6") {
	if(Model.Count() > 0) {
					<div class="tr border-radius box-border top-space">
						<div class="tr box-title"><a href="#">اقراء ايضا---</a></div>
						<div class="content">
		@foreach (var item in Model) {
			if(count < 4) {
				if(count == 3) {
							<div class="tr shortcut">
								<div class="tr shortcut-box shortcut-last">
									<div class="td first">
										<img src="https://Images.akhbarelyom.com/images/images/small/@item.PictureName1" />
									</div>
									<div class="td description">
											<a href="/news/newdetails/@item.NewsID/@JID/@(AkhbarElyoum.Controllers.HomeController.GetPureURL(item.Title))">@item.Title</a>
									</div>
								</div>
							</div>
				} else {
							<div class="tr shortcut">
								<div class="tr shortcut-box">
									<div class="td first">
										<img src="https://Images.akhbarelyom.com/images/images/small/@item.PictureName1" />
									</div>
									<div class="td description">
											<a href="/news/newdetails/@item.NewsID/@JID/@(AkhbarElyoum.Controllers.HomeController.GetPureURL(item.Title))">@item.Title</a>
									</div>
								</div>
							</div>
				}
			}
			count++;
		}
						</div>
					</div>
	}
} else {
<div class="lftBoxNews newHeightBwaba1" style="margin-top: 20px; margin-bottom: 19px; width: 308px;
    overflow: hidden;">
    <div class="lftBoxTitle">
        <h4>
            اقرأ أيضا--</h4>
    </div>
    @foreach (var item in Model)
    {
        if (count < 4)
        {
        <div class="newboxH3">
            <!-- start articles -->
            <div class="imgThum">
                <img src="https://Images.akhbarelyom.com/images/images/small/@item.PictureName1" width="76" height="51" class="thumI" />
            </div>
            <a href="/news/newdetails/@item.NewsID/@JID/@(AkhbarElyoum.Controllers.HomeController.GetPureURL(item.Title))" class="relatedNews">@item.Title</a>
            @*<p class="prg2">@Html.ActionLink("المزيد", "newdetails/" + item.NewsID, null, new { @class = "moreBtn" })</p>*@
			<p class="prg2" ><a href="/news/newdetails/@item.NewsID/@JID/@(AkhbarElyoum.Controllers.HomeController.GetPureURL(item.Title))" class="moreBtn">المزيد</a></p>
        </div>
        <!-- end articles -->
        }
        count++;
    }
</div>
}
