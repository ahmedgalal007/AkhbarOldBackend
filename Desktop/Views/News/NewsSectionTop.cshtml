@model IEnumerable<AkhbarElyoum.Models.NewsDetails>
@{
    int count = 0;
    string JID = AkhbarElyoum.Controllers.HomeController.GetJournalID(HttpContext.Current.Request.Url.Host, int.Parse((HttpContext.Current.Request.QueryString["JournalID"] != null) ? HttpContext.Current.Request.QueryString["JournalID"].ToString() : "0"));
}
<div class="section-topstory">
    <div class="section-carousel-gp">
        <div id="section-carouselNextBtn" class="topstoryNextBtnM">
            <span class="fa fa-arrow-left"></span>
        </div>
        <div id="section-carouselPrevBtn" class="topstoryPrevBtnM">
            <span class="fa fa-arrow-right"></span>
        </div>
        <div id="section-topstory" class="owl-carousel">
            @foreach (var item in Model)
            {

                if (item.SectionID == 149 || item.SectionID == 150 || item.SectionID == 151 || item.SectionID == 156)
                {
                      
                      
                <div class="item">
                    <a href="/news/VideoDisplay/@item.NewsID/@JID/@(AkhbarElyoum.Controllers.HomeController.GetPureURL(item.Title))" class="topstory-block">
                        <img src="https://Images.akhbarelyom.com/images/images/large/@item.PictureName1" alt="@item.Title" class="img-responsive">
                        <div class="topstory-text">
                            <span><h2 style="font-size:16px;font-weight:bold;">@item.Title</h2></span>
                        </div>
                    </a>
                </div>
                      
                   
                }

                else
                {
                      
                <div class="item">
                    <a href="/news/newdetails/@item.NewsID/@JID/@(AkhbarElyoum.Controllers.HomeController.GetPureURL(item.Title))" class="topstory-block">
                        <img src="https://Images.akhbarelyom.com/images/images/large/@item.PictureName1" alt="@item.Title" class="img-responsive">
                        <div class="topstory-text">
                            <span><h2 style="font-size:16px;font-weight:bold;">@item.Title</h2></span>
                        </div>
                    </a>
                </div> 
                      
                     
                }


            }
        </div>
    </div>
</div>
