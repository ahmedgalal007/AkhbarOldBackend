@model IEnumerable<AkhbarElyoum.Models.NewsDetails>
@{int count = 0; string JID = AkhbarElyoum.Controllers.HomeController.GetJournalID(HttpContext.Current.Request.Url.Host, int.Parse((HttpContext.Current.Request.QueryString["JournalID"] != null) ? HttpContext.Current.Request.QueryString["JournalID"].ToString() : "0"));}
    
    
	
	
<link rel="stylesheet" href="http://netdna.bootstrapcdn.com/bootstrap/3.1.0/css/bootstrap-theme.min.css">
<link href="css/site.css" rel="stylesheet" type="text/css" />
<link href="http://www.jqueryscript.net/css/jquerysctipttop.css" rel="stylesheet" type="text/css">
<script src="http://ajax.googleapis.com/ajax/libs/jquery/1.11.0/jquery.min.js"></script>
<script src="js/scripts/jquery.bootstrap.newsbox.min.js" type="text/javascript"></script>


<div class="container">
<div class="row">


<div class="col-md-12">
<div class="panel panel-default">
<div class="panel-heading">
<h2 class="MoreReads" style="color:#0e2840 !important;">الأكثر قراءة</h2>
</div>
<div class="panel-body">
<div class="row">
<div class="col-xs-12">
<ul id="demo3">

@foreach (var item in @Model)
            {

<li class="news-item">
   <a href="/news/newdetails/@item.NewsID/@JID/@(AkhbarElyoum.Controllers.HomeController.GetPureURL(item.Title))" title="@item.Title"> @item.Title </a>
                    </li>
										
	}	


		
</ul>
</div>
</div>
</div>
<div class="panel-footer"> </div>
</div>
</div>
</div>
</div>
<script type="text/javascript">
    $(function () {
        

        $("#demo3").bootstrapNews({
            newsPerPage: 8,
            autoplay: true,
			direction: 'down',
			newsTickerInterval: 2500,
            pauseOnHover:true,
            onToDo: function () {
                //console.log(this);
            }
        });
    });
</script>



	
	
	
	
	
	
	