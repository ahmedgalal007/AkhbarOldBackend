	@model List<AkhbarElyoum.Models.NewsDetails>
    @{
        string JID = AkhbarElyoum.Controllers.HomeController.GetJournalID(HttpContext.Current.Request.Url.Host, int.Parse((HttpContext.Current.Request.QueryString["JournalID"] != null) ? HttpContext.Current.Request.QueryString["JournalID"].ToString() : "0"));
        int counter = 0;
    }



<section class="module" id="Slider">
    <div class="container">


        @foreach (var item in @Model)
            {


                if (counter == 0)
                {
                <div class="col-md-5" style="padding-left:0px;">
                    <div class="entry-block-full">
                        <div class="image-full">
                            <a href="/news/newdetails/@item.NewsID/@JID/@(AkhbarElyoum.Controllers.HomeController.GetPureURL(item.Title)).html" title="@item.Title">
                                <img src="/images/images/Medium/@item.PictureName1" alt="@item.Title">
                            </a>
                        </div>
                        <div class="content">
                            <div class="title-left title-style04 underline04">
                                <h3><a href="/news/newdetails/@item.NewsID/@JID/@(AkhbarElyoum.Controllers.HomeController.GetPureURL(item.Title)).html" title="@item.Title">@item.Title</a></h3>
                            </div>
                        </div>
                    </div>
                </div>
            }


            if (counter == 0)
            {

                ViewContext.Writer.Write("<div class=\"col-md-2\" style=\"padding:2px;width:19%;\">");
                ViewContext.Writer.Write("<div class=\"video-sidebar\">");
            }

           

            if (counter > 0 && counter < 3)
            {
                        <!-- Begin .sidebar-block -->
                <div class="SliderBlock">
                    <div class="video-container">
                        <div class="item-image" style=" height:200px;">

                            <a class="img-link" href="/news/newdetails/@item.NewsID/@JID/@(AkhbarElyoum.Controllers.HomeController.GetPureURL(item.Title)).html" title="@item.Title">
                                <img class="img-responsive img-full" src="/images/images/Medium/@item.PictureName1" alt="@item.Title">
                            </a>

                            <div class="SliderTitle">
                                <h4>
                                    <a  href="/news/newdetails/@item.NewsID/@JID/@(AkhbarElyoum.Controllers.HomeController.GetPureURL(item.Title)).html" title="@item.Title" class="video-link">@item.Title</a>
                                </h4>
                            </div>
                        </div>
                    </div>
                </div>
            }

            if (counter == 2)
            {

                ViewContext.Writer.Write(" </div> </div>");

            }

            if (counter == 3)
            {

                ViewContext.Writer.Write("<div class=\"col-md-2\" style=\"padding:2px;width:19%;\">");
                ViewContext.Writer.Write("<div class=\"video-sidebar\">");
            }



            if (counter > 2 && counter < 5)
            {
                        <!-- Begin .sidebar-block -->
                <div class="SliderBlock">
                    <div class="video-container">
                        <div class="item-image" style=" height:200px;">

                            <a class="img-link" href="/news/newdetails/@item.NewsID/@JID/@(AkhbarElyoum.Controllers.HomeController.GetPureURL(item.Title)).html" title="@item.Title">
                                <img class="img-responsive img-full" src="/images/images/Medium/@item.PictureName1" alt="@item.Title">
                            </a>

                            <div class="SliderTitle">
                                <h4>
                                    <a  href="/news/newdetails/@item.NewsID/@JID/@(AkhbarElyoum.Controllers.HomeController.GetPureURL(item.Title)).html" title="@item.Title" class="video-link">@item.Title</a>
                                </h4>
                            </div>
                        </div>
                    </div>
                </div>
            }

            if (counter == 4)
            {

                ViewContext.Writer.Write(" </div> </div>");

            }

            if (counter == 5)
            {

                ViewContext.Writer.Write("<div class=\"col-md-2\" style=\"padding:2px;width:19%;\">");
                ViewContext.Writer.Write("<div class=\"video-sidebar\">");
            }




            if (counter > 4 && counter < 7)
            {
                        <!-- Begin .sidebar-block -->
                <div class="SliderBlock">
                    <div class="video-container">
                        <div class="item-image" style=" height:200px;">

                            <a class="img-link" href="/news/newdetails/@item.NewsID/@JID/@(AkhbarElyoum.Controllers.HomeController.GetPureURL(item.Title)).html" title="@item.Title">
                                <img class="img-responsive img-full" src="/images/images/Medium/@item.PictureName1" alt="@item.Title">
                            </a>

                            <div class="SliderTitle">
                                <h4>
                                    <a  href="/news/newdetails/@item.NewsID/@JID/@(AkhbarElyoum.Controllers.HomeController.GetPureURL(item.Title)).html" title="@item.Title" class="video-link">@item.Title</a>
                                </h4>
                            </div>
                        </div>
                    </div>
                </div>
            }

            if (counter == 6)
            {

                ViewContext.Writer.Write(" </div> </div>");

            }
			
			
			
			
			

			counter++;
			
        }

		
		

    </div>
</section>




















